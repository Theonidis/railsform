<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Owner</th>
      <th>Description</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr class="<%= cycle("even", "odd") %>" style="text-align:center">
        <td><%= item.title %></td>
        <td><%= item.owner %></td>
        <td><%= item.description %></td>
        <td><%= (Type.find(item.type_id)).title %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Item', new_item_path %>
<%= link_to 'Back to Item Listing', items_url %>

